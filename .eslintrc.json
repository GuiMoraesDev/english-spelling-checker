{
  "extends": "next/core-web-vitals",
  "plugins": ["eslint-plugin-import-helpers"],
  "rules": {
    "import-helpers/order-imports": [
      "warn",
      {
        "alphabetize": {
          "ignoreCase": false,
          "order": "asc"
        },
        "groups": [
          "/^next/",
          "/^react/",
          "module",
          "/^components/",
          "/^hooks/",
          "/^styles/",
          "/^services/",
          ["parent", "sibling", "index"]
        ],
        "newlinesBetween": "always"
      }
    ]
  }
}
